<odoo>
    <record id="view_employee_form_inherit_testfield" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.testfield</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">

            <!-- All custom fields inserted together -->
            <xpath expr="//field[@name='job_title']" position="after">
                
                <!-- Employment Info -->
                <group string="Employment Info" class="o_horizontal_field_group">
                    <group inline="True">
                        <field name="test_field" placeholder="Test:- Free Text..." />
                        <field name="joining_date" placeholder="Select joining date" />
                        <field name="experience_text" readonly="1"/>
                    </group>
                </group>

                <!-- Buttons for Region -->
                <group string="Select Region" class="o_horizontal_field_group">
                    <button name="action_india" type="object" string="India" class="btn-primary" style="margin-right:10px;"/>
                    <button name="action_uae" type="object" string="UAE" class="btn-success"/>
                </group>

                <!-- Client Dropdown (after buttons) -->
                <field name="client_choice" invisible="1" modifiers="{'invisible': [('client_visible','=',False)]}" options="{'no_create': True}"/>

                <!-- <group string="Client Selection">
                    <field name="client_choice"
                        options="{'no_create': True}"
                        
                        modifiers="{'invisible': [('client_visible', '=', False)]}"/> -->
                </group>
            </xpath>
        </field>
    </record>
</odoo>
