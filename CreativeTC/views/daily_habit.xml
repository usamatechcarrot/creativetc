<odoo>
    <record id="view_daily_habit_tree" model="ir.ui.view">
        <field name="name">daily.habit.tree</field>
        <field name="model">daily.habit</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="user_id"/>
                <field name="frequency"/>
                <field name="date"/>
                <field name="completed_count"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="view_daily_habit_form" model="ir.ui.view">
        <field name="name">daily.habit.form</field>
        <field name="model">daily.habit</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="user_id"/>
                        <field name="frequency"/>
                        <field name="date"/>
                        <field name="target_count"/>
                        <field name="completed_count"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="menu_daily_habit_root" name="Daily Habit Tracker"/>
    <menuitem id="menu_daily_habit" name="Habits" parent="menu_daily_habit_root"/>
    <act_window id="action_daily_habit"
                name="Habits"
                res_model="daily.habit"
                view_mode="tree,form"
                menu_id="menu_daily_habit"/>
</odoo>
