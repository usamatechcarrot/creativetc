<odoo>
    <!-- Tree view -->
    <record id="view_daily_habit_tree" model="ir.ui.view">
        <field name="name">daily.habit.tree</field>
        <field name="model">creative.daily_habit</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Daily Habits">
                <field name="name"/>
                <field name="date"/>
                <field name="completed"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_daily_habit_form" model="ir.ui.view">
        <field name="name">daily.habit.form</field>
        <field name="model">creative.daily_habit</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Daily Habit">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                        <field name="completed"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_daily_habit" model="ir.actions.act_window">
        <field name="name">Daily Habits</field>
        <field name="res_model">creative.daily_habit</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_daily_habit_root" name="Daily Habit Tracker" parent="hr.menu_hr_root"/>
    <menuitem id="menu_daily_habit" name="Habits" parent="menu_daily_habit_root" action="action_daily_habit"/>
</odoo>
