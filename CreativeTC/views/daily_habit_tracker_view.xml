<odoo>
    <!-- Simple Form View -->
    <record id="view_hello_world_form" model="ir.ui.view">
        <field name="name">hello.world.form</field>
        <field name="model">creative.hello_world</field>
        <field name="arch" type="xml">
            <form string="Hello World">
                <sheet>
                    <h1>Hello World!</h1>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hello_world" model="ir.actions.act_window">
        <field name="name">Hello World</field>
        <field name="res_model">creative.hello_world</field>
        <field name="view_mode">form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_hello_root" name="Hello App" parent="hr.menu_hr_root"/>
    <menuitem id="menu_hello_world" name="Hello World" parent="menu_hello_root" action="action_hello_world"/>
</odoo>
