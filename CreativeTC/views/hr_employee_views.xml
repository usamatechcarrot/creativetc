<odoo>
    <record id="view_employee_form_inherit_daily_attendance" model="ir.ui.view">
        <field name="name">hr.employee.form.daily.attendance</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Daily Attendance">
                    <field name="attendance_line_ids" nolabel="1">
                        <tree editable="false">
                            <!-- <field name="date"/> -->
                            <field name="last_check_in"/>
                            <field name="last_check_out"/>
                            <field name="status"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
