<record id="view_employee_form_inherit_attendance" model="ir.ui.view">
    <field name="name">hr.employee.form.attendance</field>
    <field name="model">hr.employee</field>
    <field name="inherit_id" ref="hr.view_employee_form"/>
    <field name="arch" type="xml">
        <!-- Insert our tab inside the notebook -->
        <xpath expr="//sheet/notebook" position="inside">
            <page string="Attendances">
                <field name="attendance_ids" widget="one2many_list">
                    <field name="attendance_ids" readonly="1"/>
                </field>
            </page>
        </xpath>

    </field>
</record>