<odoo>
    <!-- Define a tree view for hr.attendance -->
    <record id="view_hr_attendance_tree_custom" model="ir.ui.view">
        <field name="name">hr.attendance.tree.custom</field>
        <field name="model">hr.attendance</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="check_in"/>
                <field name="check_out"/>
            </tree>
        </field>
    </record>

    <!-- Define a form view for hr.attendance (optional, for inline form) -->
    <record id="view_hr_attendance_form_custom" model="ir.ui.view">
        <field name="name">hr.attendance.form.custom</field>
        <field name="model">hr.attendance</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="check_in"/>
                    <field name="check_out"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Extend Employee Form to Add Attendance Tab -->
    <record id="view_employee_form_inherit_attendance" model="ir.ui.view">
        <field name="name">hr.employee.form.attendance</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Attendance">
                    <field name="attendance_ids" mode="tree,form">
                        <tree string="Attendance Records" 
                              editable="bottom" 
                              create="true" 
                              view_id="view_hr_attendance_tree_custom"/>
                        <form string="Attendance Record" 
                              view_id="view_hr_attendance_form_custom"/>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>