<odoo>
    <!-- Extend Employee Form to Show Attendance Tab -->
    <record id="view_employee_form_inherit_attendance" model="ir.ui.view">
        <field name="name">hr.employee.form.attendance</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Attendance">
                    <!-- One2many wrapper -->
                    <field name="attendance_ids" mode="tree,form">
                        <!-- Tree view for attendance records -->
                        <tree editable="bottom">
                            <field name="check_in"/>
                            <field name="check_out"/>
                        </tree>
                        <!-- Form view for individual attendance record -->
                        <form>
                            <group>
                                <field name="check_in"/>
                                <field name="check_out"/>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>